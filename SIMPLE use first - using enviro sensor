from machine import I2C, Pin
import time

# sensor drivers (must be on Pico filesystem in /lib)
import bme280
import icm20948
import ltr390
import tsl2591
import sgp40

i2c = I2C(0, scl=Pin(5), sda=Pin(4), freq=400000)

# init sensors
bme = bme280.BME280(i2c=i2c)
imu = icm20948.ICM20948(i2c)
uv  = ltr390.LTR390(i2c)
als = tsl2591.TSL2591(i2c)
voc = sgp40.SGP40(i2c)

print("Starting measurement loop...")

while True:
    # Temperature, humidity, pressure
    temp, pres, hum = bme.read_compensated_data()
    
    # Light & IR
    lux, ir = als.read()   # visible (lux) & IR
    
    # UV index
    uv_index = uv.read_uv()
    
    # VOC (scaled value)
    voc_val = voc.measure_raw()
    
    # Accelerometer
    ax, ay, az = imu.acceleration()
    
    print("Temp: %.2f C   Humidity: %.2f%%   Pressure: %.2f hPa" %
          (temp, hum, pres))
    print("Visible Lux: %d   IR: %d   UV: %d" %
          (lux, ir, uv_index))
    print("VOC Raw:", voc_val)
    print("Accel X,Y,Z:", ax, ay, az)
    print("-------------------------------")
    
    time.sleep(1)

